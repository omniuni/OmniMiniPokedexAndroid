<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="@dimen/layout_sidebar_width"
		android:layout_height="match_parent"
		android:background="?colorPrimary"
		android:orientation="vertical"
		android:gravity="center"
		android:padding="@dimen/margin_standard">

	<TextView
			android:id="@+id/id_tv_pokemon_name"
			style="@style/TextAppearance.Material3.HeadlineLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?colorOnSurface" />

	<ImageView
			android:id="@+id/id_iv_pokemon_icon"
			android:layout_width="@dimen/icon_header_large"
			android:layout_height="@dimen/icon_header_large"
			android:layout_marginTop="@dimen/margin_standard"
			tools:ignore="ContentDescription" />

	<LinearLayout
			android:id="@+id/id_ll_chips"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"/>


</LinearLayout>