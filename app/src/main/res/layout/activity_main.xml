<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.ActivityMain">

	<FrameLayout
			android:id="@+id/id_fl_status_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/margin_standard"
			android:background="@color/md_theme_primaryContainer"/>

	<!-- Apply top padding here for window insets. -->
	<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/id_toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/colorPrimary"
			android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
			app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
			android:layout_below="@id/id_fl_status_bar"/>

	<androidx.fragment.app.FragmentContainerView
			android:id="@+id/id_fcv_activity_main"
			android:name="com.omniimpact.mini.pokedex.fragments.FragmentHome"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@id/id_fl_navigation"
			android:layout_below="@id/id_toolbar" />

	<FrameLayout
			android:id="@+id/id_fl_navigation"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="?attr/colorPrimary" />

	<FrameLayout
			android:id="@+id/id_fl_network_status_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/layout_sidebar_width"
			android:layout_marginHorizontal="@dimen/margin_double"
			android:padding="@dimen/margin_half"
			android:layout_alignParentBottom="true">
		<com.google.android.material.card.MaterialCardView
				app:contentPadding="@dimen/margin_standard"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<ProgressBar
					android:id="@+id/id_pb_network"
					android:layout_width="match_parent"
					android:layout_height="@dimen/icon_small"/>
			<TextView
					android:id="@+id/id_tv_network_status"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="@dimen/margin_standard"
					android:layout_marginTop="@dimen/icon_small"
					android:paddingTop="@dimen/margin_standard"
					style="@style/TextAppearance.Material3.TitleSmall"
					android:gravity="center"
					android:maxLines="1"
					android:ellipsize="end"
					android:text="@string/placeholder_name"/>
		</com.google.android.material.card.MaterialCardView>
	</FrameLayout>

</RelativeLayout>







