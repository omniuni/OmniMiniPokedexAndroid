<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true">

	<include
		android:id="@+id/id_ll_banner"
		layout="@layout/include_fragment_sidebar_details" />

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/id_ll_banner"
		android:background="?colorPrimary">

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:backgroundTint="@color/md_theme_inversePrimary_mediumContrast"
			app:cardCornerRadius="@dimen/margin_standard"
			app:cardPreventCornerOverlap="false"
			app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.RoundedTop"
			app:strokeWidth="0dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/icon_small"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="@string/placeholder_location" />
			</LinearLayout>

			<androidx.viewpager2.widget.ViewPager2
				android:id="@+id/id_vp_detail"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/icon_small" />

		</com.google.android.material.card.MaterialCardView>

	</FrameLayout>

</RelativeLayout>