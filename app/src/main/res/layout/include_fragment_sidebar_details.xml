<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?colorPrimary"
		android:gravity="center_horizontal"
		android:orientation="vertical">

	<TextView
			android:id="@+id/id_tv_pokemon_name"
			style="@style/TextAppearance.Material3.HeadlineLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?colorOnSurface" />

	<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_quarter">

		<ImageView
				android:id="@+id/id_iv_platform"
				android:layout_width="@dimen/icon_header_large"
				android:layout_height="@dimen/icon_header_large"
				android:src="@drawable/ic_platform"
				android:visibility="invisible"
				android:layout_marginTop="24dp"
				tools:ignore="ContentDescription" />

		<ImageView
				android:layout_width="@dimen/icon_header_large"
				android:layout_height="@dimen/icon_header_large"
				android:src="@drawable/ic_platform_shade"
				android:layout_marginTop="24dp"
				tools:ignore="ContentDescription" />

		<ImageView
				android:id="@+id/id_iv_pokemon_icon"
				android:layout_width="@dimen/icon_header_large"
				android:layout_height="@dimen/icon_header_large"
				tools:ignore="ContentDescription" />

		<LinearLayout
				android:id="@+id/id_ll_chips"
				android:layout_width="wrap_content"
				android:minWidth="@dimen/icon_medium"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginStart="@dimen/margin_standard"
				android:layout_centerVertical="true"
				android:layout_toEndOf="@id/id_iv_pokemon_icon"/>

	</RelativeLayout>


</LinearLayout>