<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/id_cv_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/margin_half"
		android:backgroundTint="@color/md_theme_background_mediumContrast"
		android:clickable="true"
		android:foreground="?android:attr/selectableItemBackground"
		app:cardCornerRadius="@dimen/padding_standard">

	<ImageView
			android:id="@+id/id_iv_pokemon_ground"
			android:layout_width="match_parent"
			android:layout_height="@dimen/icon_list_large"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/margin_double"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_platform"
			tools:ignore="ContentDescription" />

	<ImageView
			android:layout_width="match_parent"
			android:layout_height="@dimen/icon_list_large"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/margin_double"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_platform_shade"
			tools:ignore="ContentDescription" />

	<ImageView
			android:id="@+id/id_iv_pokemon_icon"
			android:layout_width="match_parent"
			android:layout_height="@dimen/icon_list_large"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/margin_standard"
			tools:ignore="ContentDescription" />

	<TextView
			android:id="@+id/id_tv_pokemon_name"
			style="@style/TextAppearance.AppCompat.Subhead"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="96dp"
			android:layout_marginBottom="@dimen/margin_standard"
			android:textAlignment="center"
			android:textStyle="bold" />

	<ImageView
			android:layout_width="@dimen/icon_mini"
			android:layout_height="@dimen/icon_mini"
			android:layout_gravity="bottom|end"
			android:layout_marginHorizontal="@dimen/margin_standard"
			android:layout_marginVertical="@dimen/margin_half"
			android:src="@drawable/ic_clickable"
			app:tint="@color/md_theme_onBackground"
			tools:ignore="ContentDescription" />

</androidx.cardview.widget.CardView>